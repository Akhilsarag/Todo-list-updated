<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Todo List</title>
  <link rel="stylesheet" href="css/style.css">
</head>
<body>
  <div class="box">
    <h1>Todo List</h1>

    <!-- Add New Task -->
    <form action="/" method="POST">
      <input type="text" name="ele1" placeholder="Enter a task" required />
      <select name="priority" required>
        <option value="">Priority</option>
        <option value="High">High</option>
        <option value="Medium">Medium</option>
        <option value="Low">Low</option>
      </select>
      <button type="submit">Add</button>
    </form>

    <!-- Task List -->
    <ul>
      <% ejes.forEach(task => { %>
        <li class="item">
          <!-- Delete form -->
          <form action="/delete/<%= task._id %>?_method=DELETE" method="POST" style="margin-right: 10px;">
            <button type="submit" title="Delete">üóëÔ∏è</button>
          </form>

          <!-- Edit form -->
          <form action="/update/<%= task._id %>?_method=PUT" method="POST" class="edit-form">
            <input type="text" name="updatedText" value="<%= task.name %>" required />
            <span class="priority <%= task.priority.toLowerCase() %>"><%= task.priority %></span>
            <button type="submit" title="Update">‚úèÔ∏è</button>
          </form>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
